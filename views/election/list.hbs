<div class="mx-auto shadow w-50 mt-5 election-list p-2">
    <div class="d-flex justify-content-between">
        <a href="/elections/logout" class="btn btn-outline-primary">Đăng xuất</a>
        <a href="/elections/new" class="btn btn-outline-success"><svg xmlns="http://www.w3.org/2000/svg" width="16"
                height="16" fill="currentColor" class="bi bi-person-plus" viewBox="0 0 16 16" style="margin-right:5px">
                <path
                    d="M6 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0zm4 8c0 1-1 1-1 1H1s-1 0-1-1 1-4 6-4 6 3 6 4zm-1-.004c-.001-.246-.154-.986-.832-1.664C9.516 10.68 8.289 10 6 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10z" />
                <path fill-rule="evenodd"
                    d="M13.5 5a.5.5 0 0 1 .5.5V7h1.5a.5.5 0 0 1 0 1H14v1.5a.5.5 0 0 1-1 0V8h-1.5a.5.5 0 0 1 0-1H13V5.5a.5.5 0 0 1 .5-.5z" />
            </svg>Bầu cử</a>
    </div>
    {{#each elections}}
    <div class="card mt-3" style="width: 100%;">
        <div class="card-body">
            <h5 class="card-title">{{this.name}}</h5>
            <h6 class="card-subtitle mb-2 text-muted">Năm:&nbsp{{this.year}}</h6>
            <div class="card-text">
                <ul>
                    {{#each this.nominees}}
                    <li>{{this}}</li>
                    {{/each}}
                </ul>
            </div>
            <div>Thời hạn: {{this.deadline}}</div>
            <a href="/elections/extent/{{this.id}}" class="btn btn-outline-primary">Sửa đổi thời hạn</a>
            <button type="button" class="btn btn-outline-danger">Xóa</button>
        </div>
    </div>
    {{/each}}
</div>